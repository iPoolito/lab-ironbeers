<div>
    <div class="img-random-container">
        <img src="{{this.image_url}}" alt="" class="randomimg">
    </div>
 <div class="info-random-container">
        <div class="info-random-desc">
            <h1>{{this.name}}</h1>
            <p class="lema">{{this.tagline}}</p>
            <p>{{this.description}}</p>
            
        </div>
        <div class="info-random-prep">
            <h4>Food Pairing</h4>
            <ul>
                {{#each this.food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p><b>Brewer Tips:</b> {{this.brewers_tips}}</p>
        </div>
 </div>
</div>